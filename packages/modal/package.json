{
  "name": "@cher1shrxd/modal",
  "version": "1.0.0",
  "description": "A flexible modal/dialog library for React with stacking support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && node -e \"const fs = require('fs'); ['dist/index.js', 'dist/index.mjs'].forEach(f => { const c = fs.readFileSync(f, 'utf8'); fs.writeFileSync(f, '\\\"use client\\\";\\n' + c); });\"",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "zustand": ">=4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.0",
    "sass": "^1.80.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cher1shrxd/cher1shrxd-utils"
  },
  "keywords": [
    "react",
    "modal",
    "dialog",
    "popup",
    "overlay"
  ],
  "author": "cher1shrxd",
  "license": "MIT"
}
